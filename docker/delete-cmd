
docker exec -ti <container name> /bin/bash


docker rm -f $(docker ps -a -q)  

docker system prune --all

docker rm `docker ps -aq -f status=exited`

docker image prune

docker image prune --all --filter "until=40h"  ==> delete images older than 40h

docker rmi $(docker images -a -q)

docker rm $(docker ps -a -f status=exited -f status=created -q)


alias docker-clean=' \
  docker container prune -f ; \
  docker image prune -f ; \
  docker network prune -f ; \
  docker volume prune -f '


Delete unused(dangling) images==> $ docker images --no-trunc -aqf "dangling=true" | xargs docker rmi


delete unused (dangling) volumes ==> docker volume ls -qf "dangling=true" | xargs docker volume rm


docker volume ls -qf "dangling=true" | xargs docker volume rm 
docker images --no-trunc -aqf "dangling=true" | xargs docker rmi
docker ps --no-trunc -aqf "status=exited" | xargs docker rm
